<div ng-controller="developerCtrl" ng-init="devs()" class="ui segment">
<div class="ui active page dimmer" ng-hide="developers">
    <div class="ui massive text loader">Espera...</div>
  </div>
  <center>
    <h1>Desarrolladores</h1>
  </center>
  <hr>
  <div class="ui container">
      <div class="ui icon input">
      <input type="text" placeholder="Search..." ng-model="buscar">
      <i class="circular search icon"></i>
    </div>
  <table class="ui celled table">
      <thead>
        <tr>
          <th>Avatar</th>
          <th>Desarrollador</th>
          <th>Fecha de Registro</th>
          <th>Correo Electronico</th>
          <th>Skills</th>
          <th style="text-align:center;">---</th>
          <th style="text-align:center;">---</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat=" dev in developers | filter : buscar ">
          <td style="text-align:center"><img class="ui avatar image" src="img/avtr.png"></td>
          <td style="text-transform: capitalize">{[dev.nombre]} {[dev.paterno]} {[dev.materno]}</td>
          <td>{[dev.fecha_reg]}</td>
          <td>{[dev.correo]}</td>
          <td>{[dev.toll]}</td>
          <td style="text-align:center"><button class="mini icon ui blue button" ng-click="verDev(dev)"><i class="write icon"></i></button></td>
          <td style="text-align:center"><button class="mini icon ui red button" ng-click="Remove(dev)"><i class="remove user icon"></i></button></td>
        </tr>
      </tbody>
      <tfoot class="full-width">
        <tr>
          <th colspan="7">
            <div class="ui right floated small primary labeled icon button" ng-click="addDev()">
              <i class="user icon"></i> Agregar Desarrollador
            </div>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  {{!--modal--}}
  <div class="ui modal" style="width:900px" id="hello">
    <div class="header"><h1 style="text-transform:uppercase">Desarrollador</h1></div>
    <div class="content">
      {{!--  --}}
      <div class="ui form">
        <div class="three fields">
          <div class="field">
            <label>Nombre</label>
            <input type="text" ng-model="devUnit.nombre" placeholder="Nombre">
          </div>
          <div class="field">
            <label>Apellido Paterno</label>
            <input type="text" placeholder="Apellido Paterno" ng-model="devUnit.paterno">
          </div>
          <div class="field">
            <label>Apellido Materno</label>
            <input type="text" placeholder="Apellido Materno" ng-model="devUnit.materno">
          </div>
        </div>
        <div class="three fields">
          <div class="field">
            <label>Calle</label>
            <input type="text" placeholder="Calle" ng-model="devDir.calle">
          </div>
          <div class="field">
            <label>Colonia</label>
            <input type="text" placeholder="Colonia" ng-model="devDir.colonia">
          </div>
          <div class="field">
            <label>Delegacion</label>
            <input type="text" placeholder="Delegacion" ng-model="devDir.delegacion">
          </div>
          <div class="field">
            <label>Codigo Postal</label>
            <input type="text" placeholder="Cp" ng-model="devDir.cp" maxlength="5">
          </div>
        </div>
        <div class="two fields">
          <div class="field">
            <label>Celular</label>
            <input type="text" placeholder="Celular" maxlength="10" ng-model="devUnit.celular">
          </div>
          <div class="field">
            <label>Email</label>
            <input type="email" placeholder="em@il.com" ng-model="devUnit.correo">
          </div>
        </div>
      </div>
      {{!--  --}}
      <center>
       <div class="ui buttons">
        <button class="ui button" ng-click="cancelUpdate()">Cancelar</button>
        <div class="or"></div>
        <button class="ui positive button" ng-click="Update(devUnit,devDir,devSkill)">Actualizar</button>
      </div>
    </center>
  </div>
</div>
{{!--  --}}
</div>