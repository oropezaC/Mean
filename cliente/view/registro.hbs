<div ng-controller="developerCtrl">
<center>
  <h1>Registro Desarrollador</h1>
  </center>
  <hr>
  <br>
  <div class="ui container">
  <div class="ui form ">
    <div class="three fields">
      <div class="field">
        <label>Nombre</label>
        <input type="text" ng-model="dev.nombre" placeholder="Nombre">
      </div>
      <div class="field">
        <label>Apellido Paterno</label>
        <input type="text" placeholder="Apellido Paterno" ng-model="dev.paterno">
      </div>
      <div class="field">
        <label>Apellido Materno</label>
        <input type="text" placeholder="Apellido Materno" ng-model="dev.materno">
      </div>
    </div>
    <div class="three fields">
      <div class="field">
        <label>Calle</label>
        <input type="text" placeholder="Calle" ng-model="dev.calle">
      </div>
      <div class="field">
        <label>Colonia</label>
        <input type="text" placeholder="Colonia" ng-model="dev.colonia">
      </div>
      <div class="field">
        <label>Delegacion</label>
        <input type="text" placeholder="Delegacion" ng-model="dev.delegacion">
      </div>
      <div class="field">
        <label>Codigo Postal</label>
        <input type="text" placeholder="Cp" ng-model="dev.cp" maxlength="5">
      </div>
    </div>
    <div class="three fields">
      <div class="field">
        <label>Celular</label>
        <input type="text" placeholder="Celular" maxlength="10" ng-model="dev.celular">
      </div>
      <div class="field">
        <label>Email</label>
        <input type="email" placeholder="em@il.com" ng-model="dev.correo">
      </div>
      <div class="field">
        <label>Lenguajes</label>
        <select name="skills" multiple="" class="ui fluid dropdown" ng-model="dev.skill">
          <option value="">Skills</option>
          <option value="angular">Angular</option>
          <option value="css">CSS</option>
          <option value="design">Graphic Design</option>
          <option value="ember">Ember</option>
          <option value="html">HTML</option>
          <option value="ia">Information Architecture</option>
          <option value="javascript">Javascript</option>
          <option value="mech">Mechanical Engineering</option>
          <option value="meteor">Meteor</option>
          <option value="node">NodeJS</option>
          <option value="plumbing">Plumbing</option>
          <option value="python">Python</option>
          <option value="rails">Rails</option>
          <option value="react">React</option>
          <option value="repair">Kitchen Repair</option>
          <option value="ruby">Ruby</option>
          <option value="ui">UI Design</option>
          <option value="ux">User Experience</option>
        </select>
      </div>
    </div>
  </div>
  </div>
  <!--  -->
  <!-- <button ng-click="save(dev)"> hola</button> -->
  <div class="ui center aligned container" >
    <div class="ui vertical animated button ui green button small ui button"  tabindex="0" ng-hide="btnSave">
      <div class="hidden content" ng-click="save(dev)">Guardar</div>
      <div class="visible content">
        <i class="add user icon"></i>
      </div>
    </div>
    <button class="ui loading button" ng-show="btnSave">Loading</button>
  </div>
  <!--  -->
  <div class="ui modal" style="width:900px">
    <div class="header">Alerta!</div>
    <div class="content">
      <h1>¡Desarrollador Guardado!</h1>
      <center>
      <h2>¿Quieres ingresar otro desarrollador?</h2>
      <div class="ui buttons">
        <button class="ui button" ng-click="cancel()">No:(</button>
        <div class="or"></div>
        <button class="ui positive button" ng-click="nuevoReg()">Si:D</button>
      </div>
      </center>
    </div>
  </div>
</div>
